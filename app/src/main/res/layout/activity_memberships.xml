<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/images"
    tools:context=".Memberships">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/library_logo"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/your_logo_image" />

        <TextView
            android:id="@+id/library_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/library_logo"
            android:layout_alignTop="@id/library_logo"
            android:layout_alignBottom="@id/library_logo"
            android:layout_marginStart="16dp"  android:text="Librivox Library Management System"
            android:fontFamily="sans-serif-condensed"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memberships"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/card_no_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Card Number (Max 10 characters)"
        android:inputType="number"
        android:maxLength="10" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Member Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Member Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number (Max 10 characters)"
        android:inputType="number"
        android:maxLength="10" />

    <EditText
        android:id="@+id/unpaid_dues_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Unpaid Dues (Max 5 digits, 2 decimals)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/add_member_button"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Add Member" />



    <Button
        android:id="@+id/remove_member_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Member" />

    <Button
        android:id="@+id/view_members_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Members" />


</LinearLayout>
